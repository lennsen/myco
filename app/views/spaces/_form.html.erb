<div class="space-form">
  <%= simple_form_for(@space, html: { class: "form"}) do |f| %>
    <%= f.input :title, input_html: { class: "form-control form-space-title" }, label: false, placeholder: 'Name your HUB' %>
    <%= f.input :description, as: :text, input_html: { class: "form-control form-space-description" }, label: false, placeholder: 'Give a short description of your HUB' %>
    <%= f.input :space_type, collection: [["Private Space", "PRIVATE"], ["Community Space", "COMMUNITY"], ["Professional Space", "PROFESSIONAL"], ["Corporate Space", "CORPORATE"]], as: :select, input_html: { class: "form-control form-space-type"}, label: false, prompt: 'Choose the space type' %>
    <%= f.input :location, input_html: { class: "form-control form-space-location" }, label: false, placeholder: 'Where is your HUB located?' %>
    <%= f.input :price_per_month, input_html: { class: "form-control form-space-price" }, label: false, placeholder: 'Price per month?' %>

  <div class="buttons-container">
    <div height="40">
      <%= f.input :photo, input_html: { class: 'photo-upload'}, label: 'Upload a photo:', label_html: { style: 'display: block'} %>
    </div>
    <br>
    <div height="40" >
      <%= f.submit 'Publish your HUB', class: "btn btn-flat", style: "width: 100%"%>
    </div>
  </div>
  <% end %>
</div>
