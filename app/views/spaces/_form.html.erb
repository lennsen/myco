<%= simple_form_for(space, html: { class: "form"}) do |f| %>
  <%= f.input :title, input_html: { class: "form-control" }, label: false, placeholder: 'Name your coworking space' %>
  <%= f.input :description, input_html: { class: "form-control " }, label: false, placeholder: 'Give a short description of your coworking space' %>
  <%= f.input :space_type, input_html: { class: "form-control" }, label: false, placeholder: 'What kind of coworking space is it?' %>
  <%= f.input :location, input_html: { class: "form-control" }, label: false, placeholder: 'Where is your coworking space located?' %>

<div class="buttons-container">
  <div height="40">
    <%= f.input :photo, input_html: { class: "d-none" }, label_html: { class: 'btn-height btn btn-ghost'}, label: 'Upload a photo' %>
  </div>
  <div height="40">
    <%= f.submit 'Create HUB', class: "btn btn-flat"%>
  </div>
</div>
<% end %>
