<%= render "shared/navbar" %>

<div class="container-main">
  <div class="index-container ">
    <% @spaces.each do |space| %>
      <%= link_to space_path(space.id, :location => params[:location]) do %>
        <div class="card card-grid">
          <% if space.photo.attached? %>
            <%= cl_image_tag space.photo.key, crop: :fill %>
          <% end %>
          <div class="card-body">
            <p class="card-spacetype"><%= space.space_type %></p>
            <h5 class="card-title"><%= space.title %></h5>
            <div class="card-details">
              <p class="card-location"><%= space.location %></p>
              <p class="card-price"><%= space.price_per_month %> EUR/month</p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div id="map"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
