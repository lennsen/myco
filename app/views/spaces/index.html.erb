<%= render "shared/navbar" %>
<div class="index-container mt-5">
  <% @spaces.each do |space| %>
    <div class="card" style="width: 18rem;">
      <% if space.photo.attached? %>
        <%= cl_image_tag space.photo.key, crop: :fill %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= space.title %></h5>
        <p class="card-text"><%= space.description %></p>
        <%= link_to "Continue", space_path(space.id, :location => params[:location]), class: "create btn btn-warning", style: "margin-top: 8px; border-radius: 50px"  %>
      </div>
    </div>
    <% end %>

  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
