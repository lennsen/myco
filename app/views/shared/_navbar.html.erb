<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "HUBert_Logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Become a HUB!", new_space_path, class: "btn btn-ghost" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "avatar-placeholder.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "LISTINGS", myhubs_path, class: "dropdown-item" %>
            <%= link_to "HOSTINGS", hostings_bookings_path, class: "dropdown-item" %>
            <%= link_to "VISITS", bookings_path, class: "dropdown-item" %>
            <%= link_to "LOGOUT", destroy_user_session_path, method: :delete, class: "dropdown-item", style: "color: #53B2AC" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link", style: "color: #2b2b2b" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
